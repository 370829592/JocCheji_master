<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.icalinks.mobile.ui.activity.MoreMenu" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingTop="20dp" >

        <TextView
            android:id="@+id/tv_xsjsyh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/yhsj_xsjsyh_bg"
            android:gravity="center"
            android:text="01"
            android:textSize="50sp"
            android:textColor="#000" />

        <TextView
            android:id="@+id/tv_xsyhs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/yhsj_xsyhs_bg"
            android:gravity="center"
            android:text="02"
             android:textSize="50sp"
            android:textColor="#000" />

        <TextView
            android:id="@+id/tv_yhfy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/yhsj_yhfy_bg"
            android:gravity="center_horizontal|bottom"
            android:paddingBottom="10dp"
             android:textSize="30sp"
            android:text="05"
            android:textColor="#000" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:background="@drawable/yhsj_data_bg" >

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="44dp"
            android:layout_marginLeft="115dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_current_youhao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="08.25"
                android:textColor="#FFFFFF" />

            <ImageView
                android:id="@+id/iv_current_youhao"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:background="@drawable/yhsj_01" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/linearLayout1"
            android:layout_marginLeft="72dp"
            android:layout_toRightOf="@+id/linearLayout1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_total_youhao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10.25"
                android:textColor="#FFFFFF" />

            <ImageView
                android:id="@+id/iv_total_youhao"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:background="@drawable/yhsj_02" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/linearLayout2"
            android:layout_marginLeft="70dp"
            android:layout_toRightOf="@+id/linearLayout2"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_guangfang_youhao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15.25"
                android:textColor="#FFFFFF" />

            <ImageView
                android:id="@+id/iv_guangfang_youhao"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:background="@drawable/yhsj_03" />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>