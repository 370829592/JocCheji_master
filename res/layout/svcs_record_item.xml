<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="67px"
    android:layout_gravity="center"
    android:background="@drawable/info_ssdata_list_record_bg" >

    <LinearLayout
        android:id="@+id/svcs_record_item_num_layout"
        android:layout_width="44px"
        android:layout_height="44px"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/info_ssdata_record_item_num"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/svcs_record_item_rownum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="1"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <ImageView
        android:id="@+id/svcs_record_item_nav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center"
        android:src="@drawable/info_ssdata_record_item_nav" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/svcs_record_item_nav"
        android:layout_toRightOf="@+id/svcs_record_item_num_layout"
        android:orientation="horizontal" >

        <!-- android:textSize="25sp" -->

        <TextView
            android:id="@+id/svcs_record_item_datetime"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:text="2012-12-05 17:50"
           />
    </RelativeLayout>

</RelativeLayout>