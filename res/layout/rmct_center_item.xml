<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rmct_center_item_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/rmct_center_item_icon"
        android:layout_width="102px"
        android:layout_height="102px"
        android:src="@drawable/rmct_center_shutdoor" />

    <TextView
        android:id="@+id/rmct_center_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxHeight="51px"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#442510" />

</LinearLayout>