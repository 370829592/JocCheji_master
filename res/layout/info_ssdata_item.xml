<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/ssdata_item_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:layout_marginLeft="10px"
        android:src="@drawable/info_nav" />

    <TextView
        android:id="@+id/ssdata_item_lbl_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="10px"
        android:layout_toRightOf="@+id/ssdata_item_img"
        android:text="统计项目"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/ssdata_item_lbl_unit"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_marginRight="5px"
        android:gravity="center_horizontal"
        android:text="单位"
        android:textColor="#FFF"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/ssdata_item_lbl_data"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_toLeftOf="@+id/ssdata_item_lbl_unit"
        android:gravity="center_horizontal"
        android:text="1685"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/ssdata_txt_color" />

</RelativeLayout>