<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/center_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/info_status_rlt_isok"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/info_status_isok_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/info_status_isok_l" />

        <Button
            android:id="@+id/info_status_isok_yuyue"
            android:layout_width="180px"
            android:layout_height="67px"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="235px"
            android:background="@drawable/info_status_yuyue_ok" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/info_status_rlt_onok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20px"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/info_status_nook_bg"
            android:layout_width="640px"
            android:layout_height="370px"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/info_status_nook_l" />

        <ListView
            android:id="@+id/info_status_lst_faultcode"
            android:layout_width="160px"
            android:layout_height="200px"
            android:layout_alignLeft="@+id/info_status_lst_head"
            android:layout_alignRight="@+id/info_status_lst_head"
            android:layout_below="@+id/info_status_lst_head"
            android:scrollbars="none" >
        </ListView>

        <TextView
            android:id="@+id/info_status_lst_head"
            android:layout_width="160px"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="270px"
            android:layout_marginTop="138px"
            android:background="@drawable/info_status_head_bg"
            android:gravity="center"
            android:text="故障码"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/black" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/info_status_lst_faultcode"
            android:layout_marginTop="-18px"
            android:layout_toRightOf="@+id/info_status_lst_faultcode"
            android:gravity="center"
            android:orientation="vertical" >

            <Button
                android:id="@+id/info_status_nook_yuyue"
                android:layout_width="138px"
                android:layout_height="48px"
                android:layout_margin="9px"
                android:background="@drawable/info_status_yuyue" />

            <Button
                android:id="@+id/info_status_nook_clear"
                android:layout_width="138px"
                android:layout_height="48px"
                android:layout_margin="9px"
                android:background="@drawable/info_status_clear" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>