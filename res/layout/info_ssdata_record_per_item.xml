<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@drawable/info_ssdata_list_record_bg" >

    <LinearLayout
        android:id="@+id/info_ssdata_record_item_num_layout"
        android:layout_width="50px"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20px"
        android:layout_marginRight="7px"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/info_ssdata_record_item_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="1"
            android:textColor="#1efcff"
            android:textSize="20sp"
            android:textStyle="bold" />
        
        <TextView 
            android:layout_width="0.5dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="20dp"
            android:background="#1efcff"
            />
    </LinearLayout>

    <ImageView
        android:id="@+id/info_ssdata_record_item_nav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="35dp"
        android:gravity="center"
        android:src="@drawable/doc_jiantou" />

    <ImageView
        android:id="@+id/info_ssdata_record_delect_nav"
        android:layout_width="80px"
        android:layout_height="36px"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:gravity="center"
        android:src="@drawable/account_delete"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/info_ssdata_record_item_nav"
        android:layout_toRightOf="@+id/info_ssdata_record_item_num_layout"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/info_ssdata_record_item_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginRight="0dp"
            android:gravity="center"
            android:text=" è‡³  "
            android:textSize="15sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/info_ssdata_record_item_start_time"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/info_ssdata_record_item_"
            android:gravity="left"
            android:text="00:00:00"
            android:textColor="#1efcff"
            android:textSize="18dip" />

        <TextView
            android:id="@+id/info_ssdata_record_item_end_time"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/info_ssdata_record_item_"
            android:text="00:00:00"
            android:textSize="25sp"
            android:visibility="gone" />
    </RelativeLayout>

</RelativeLayout>