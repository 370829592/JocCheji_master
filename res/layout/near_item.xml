<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="67px"
    android:layout_gravity="center"
    android:background="@drawable/info_ssdata_list_record_bg" >

    <LinearLayout
        android:id="@+id/near_item_num_layout"
        android:layout_width="44px"
        android:layout_height="44px"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/info_ssdata_record_item_num"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/near_item_rownum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="1"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <ImageView
        android:id="@+id/near_item_nav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:gravity="center"
        android:src="@drawable/info_ssdata_record_item_nav" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/near_item_nav"
        android:layout_toRightOf="@+id/near_item_num_layout"
        android:gravity="center_vertical"
        android:minHeight="50dip"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/near_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:text="海龙珠油站"
                android:textColor="#BDBDBD"
                android:textSize="18dip" />

            <TextView
                android:id="@+id/near_item_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="广东省深圳市南山区沙河西路3285号"
                android:textColor="#818286"
                android:textSize="12dip" />
        </LinearLayout>

        <TextView
            android:id="@+id/near_item_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:text="500米"
            android:textColor="#BDBDBD"
            android:textSize="18dip" />
    </LinearLayout>

</RelativeLayout>